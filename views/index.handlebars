<h1>Eat Da Burger</h1>

<h2>Burgers that are devoured</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="slee">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Not Devoured!<br>
        <input type="radio" name="devoured" value="0"> Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>