<div class="container d-flex justify-content-center">
    <i class="fas fa-hamburger fa-10x"></i>
</div>
<div class="container burgers">
    <div class="row">
        <div class="col">
            <form class="create-form">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name" placeholder="Burger Name Here">
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
    <div class="row secondRow">
        <div class="col-lg">
            <h2>Burgers that are not devoured</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>


        </div>
        <div class="col-lg">
            <h2>Burgers that are devoured</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
    </div>


</div>